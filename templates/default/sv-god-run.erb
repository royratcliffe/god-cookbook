#!/bin/sh
exec 2>&1

trap 'kill -HUP %1' 1 2 13 15

<% if node[:rbenv_root] %>
export RBENV_ROOT=<%= node[:rbenv_root] %>
<% end %>

<% if node[:rbenv_version] %>
export RBENV_VERSION=<%= node[:rbenv_version] %>
<% end %>

<% if node[:rbenv_path] %>
export PATH=<%= node[:rbenv_path] %>:$PATH
<% end %>

exec <%= node[:runit][:chpst_bin] %> god -D -c /etc/god/master.god --no-syslog
